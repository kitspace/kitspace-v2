{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug frontend",
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/frontend/node_modules/**"
      ],
      "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}/frontend",
      "port": 9229,
      "sourceMapPathOverrides": {
        "webpack:///*": "${workspaceFolder}/frontend/*"
      },
      "outFiles": ["${workspaceFolder}/frontend/.next/server/**/*.js"]
    }
  ]
}
