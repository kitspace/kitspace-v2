{
  "name": "kitspace-frontend",
  "scripts": {
    "dev": "nodemon server.js --watch server.js --watch next.config.js",
    "build": "next build",
    "build-fallback": "next build && next export -o static_fallback",
    "start": "node server.js",
    "e2e": "cypress run",
    "fmt": "prettier --write *.js $(find . -name '*.js' | grep -v .next)"
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "@stripe/react-stripe": "^7.0.0-beta.0",
    "@stripe/stripe-js": "^1.10.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "file-loader": "^6.0.0",
    "joi": "^17.2.1",
    "next": "^9.4.1",
    "node-sass": "^4.13.0",
    "raw-loader": "^4.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-dropzone": "^11.2.3",
    "react-social-login-buttons": "^3.1.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "slugify": "^1.4.6",
    "superagent": "^5.1.3",
    "url-loader": "^4.1.0"
  },
  "devDependencies": {
    "@types/faker": "^5.1.0",
    "@types/stripe": "^7.13.25",
    "cypress": "^5.1.0",
    "faker": "^5.1.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
